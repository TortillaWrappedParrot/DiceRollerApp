<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color"
    tools:context=".MainScreen">

    <ImageView
        android:id="@+id/shelfBackground"
        android:layout_width="500dp"
        android:layout_height="800dp"
        android:layout_below="@id/mainFragment"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="-16dp"
        android:layout_marginBottom="-23dp"
        android:layout_weight="0"
        android:background="#00FFFFFF"
        android:src="@android:drawable/spinner_background"
        app:srcCompat="@android:drawable/spinner_background" />

    <ImageButton
        android:id="@+id/mainFragment"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:background="#00121010"
        android:rotationX="180"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow" />

    <ImageView
        android:id="@+id/dieImage20"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="291dp"
        android:layout_marginEnd="55dp"
        android:src="@drawable/dice20" />

    <TextView
        android:id="@+id/dieText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dieImage20"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="44dp"
        android:text="20 Sided Dice" />

    <ImageView
        android:id="@+id/dieImage6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="288dp"
        android:src="@drawable/dice6" />

    <ImageView
        android:id="@+id/dieImage2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="166dp"
        android:layout_marginTop="289dp"
        android:src="@drawable/dice2" />

    <TextView
        android:id="@+id/dieText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dieImage2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="176dp"
        android:layout_marginTop="10dp"
        android:text="Quarter" />

    <TextView
        android:id="@+id/dieText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dieImage6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="11dp"
        android:text="6 Sided Dice" />

</RelativeLayout>